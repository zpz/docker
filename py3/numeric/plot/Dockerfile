# Dockerfile for image 'py3plot:20170823'
# Generated by 'build.sh'
#
# DO NOT EDIT.

FROM zppz/py3num:20170823
USER root

# freetype and xft are required by matplotlib
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        libfreetype6 \
        libfreetype6-dev \
        libxft-dev \
        tcl \
        tk \
    && pip install --no-cache-dir --upgrade \
        'matplotlib==2.0.2' \
        'seaborn==0.8' \
    && apt-get purge -y --auto-remove \
        libfreetype6-dev \
        libxft-dev \
    && rm -rf /var/lib/apt/lists/* /tmp/*

RUN pip install --no-cache-dir --upgrade \
        'bokeh==0.12.6' \
        'param==1.5.1' \
        'plotly==2.0.14' \
    && pip install --no-cache-dir --upgrade \
        'holoviews==1.8.3'

# 'gif' support in Holoviews requires ImageMagick
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        imagemagick \
    && rm -rf /var/lib/apt/lists/* /tmp/*
