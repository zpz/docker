RUN pip install --no-cache-dir --upgrade \
        'bokeh==0.12.10' \
        'param==1.5.1' \
        'plotly==2.1.0' \
    && pip install --no-cache-dir --upgrade \
        'holoviews==1.8.4'

# 'gif' support in Holoviews requires ImageMagick
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        imagemagick \
    && rm -rf /var/lib/apt/lists/* /tmp/*
