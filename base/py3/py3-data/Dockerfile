# Dockerfile for image 'zppz/py3-data:20160709'

#===========================
# Generated by 'build.sh'.
#
# DO NOT EDIT.
#===========================

FROM zppz/py3:20160709

USER root


#--------------------------
# Python data packages

# freetype and xft are required by matplotlib.
# bokeh installs tornado.

RUN pip install --no-cache-dir --upgrade \
        'numpy==1.11.0' \
        'sqlalchemy==1.0.13' \
        'sqlparse==0.1.19' \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
        build-essential \
        pkg-config \
    && pip install --no-cache-dir --upgrade \
        'pandas==0.18.1' \
    && apt-get install -y --no-install-recommends \
        libfreetype6 \
        libfreetype6-dev \
        libxft-dev \
    && pip install --no-cache-dir --upgrade \
        'matplotlib==1.5.1' \
        'bokeh==0.12.0' \
    && apt-get purge -y --auto-remove \
        build-essential \
        pkg-config \
        libfreetype6-dev \
        libxft-dev \
    && rm -rf /var/lib/apt/lists/* /tmp/* \
    && apt-get -y autoremove \
    && apt-get clean


