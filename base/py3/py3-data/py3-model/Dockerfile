# Dockerfile for image 'zppz/py3-model:20160710'

#===========================
# Generated by 'build.sh'.
#
# DO NOT EDIT.
#===========================

FROM zppz/py3-data:20160709

USER root


#--------------------------
# Python modeling packages

# lapack and gfortran are required by scipy and a couple others.
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        build-essential \
        pkg-config \
        liblapack3 \
        liblapack-dev \
        gfortran \
    \
    && pip install --no-cache-dir --upgrade \
        'scipy==0.17.1' \
    && pip install --no-cache-dir --upgrade \
        'cvxpy==0.4.2' \
        'patsy==0.4.1' \
        'scikit-learn==0.17.1' \
        'statsmodels==0.8.0rc1' \
    \
    && pip install --no-cache-dir --upgrade \
        'seaborn==0.7.1' \
    \
    && apt-get purge -y --auto-remove \
        build-essential \
        pkg-config \
        liblapack-dev \
        gfortran \
    && rm -rf /var/lib/apt/lists/* /tmp/* \
    && apt-get autoremove -y \
    && apt-get clean


#-------------
# startup

USER ${USER}
WORKDIr ${HOME}

CMD ["python"]
